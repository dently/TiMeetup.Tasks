<Alloy>
	<Window id="window">
		<RightNavButton>
			<Button id="saveBtn" onClick="saveTask">Save</Button>
		</RightNavButton>
		<Menu id="menu" platform="android">
			<MenuItem
				id="menuItem"
				title="Save"
				showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"
				onClick="saveTask" />
		</Menu>
		<View id="wrapper">
			<TextField hintText="Task name" id="taskName" class="inputField"></TextField>
		</View>
	</Window>
</Alloy>